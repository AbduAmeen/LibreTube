<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/yt_transition"
        motion:constraintSetEnd="@+id/minimized"
        motion:constraintSetStart="@id/defaultState"
        motion:duration="150"
        motion:motionInterpolator="linear"
        >
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/close_imageView"
               motion:framePosition="90"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/play_imageView"
               motion:framePosition="90"
               android:alpha="0" />
           <KeyAttribute
               motion:motionTarget="@+id/title_textView"
               motion:framePosition="95"
               android:alpha="0" />
           <KeyPosition
               motion:motionTarget="@+id/main_container"
               motion:framePosition="90"
               motion:curveFit="linear"
               motion:percentWidth="0"
               motion:percentX="0"/>


       </KeyFrameSet>
        <OnSwipe
            motion:touchAnchorId="@+id/constraintLayout10"
            motion:dragDirection="dragDown"
            motion:touchAnchorSide="bottom"
            motion:maxAcceleration="40"
            motion:dragScale="6"
            />

    </Transition>
    <Transition
        android:id="@+id/fullscreen"
        motion:constraintSetStart="@+id/defaultState"
        motion:constraintSetEnd="@+id/fullscreen_end" />

    <ConstraintSet android:id="@+id/defaultState">
        <Constraint
            android:id="@+id/constraintLayout10"
            motion:layout_constraintEnd_toEndOf="@id/main_container"
            android:layout_width="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/main_container"
            motion:layout_constraintTop_toTopOf="@id/main_container"
            motion:layout_constraintStart_toEndOf="@id/main_container" />
        <Constraint
            android:id="@+id/main_container"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintHeight_percent="0.35"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/scrollView2"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toBottomOf="@+id/main_container"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/minimized">
        <Constraint
            android:id="@+id/main_container"
            android:layout_width="114dp"
            android:layout_height="64dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/constraintLayout10"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="@id/main_container"
            android:visibility="visible"
            android:alpha="1"
            android:layout_width="0dp"
            motion:layout_constraintStart_toEndOf="@id/main_container" />
        <Constraint
            android:id="@+id/title_textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/play_imageView"
            android:alpha="1"
            android:layout_marginStart="8dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginLeft="8dp" />

    </ConstraintSet>
    <ConstraintSet android:id="@+id/fullscreen_end" >
        <Constraint
            android:id="@+id/main_container"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </ConstraintSet>

</MotionScene>